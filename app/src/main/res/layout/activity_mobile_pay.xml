<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicolai.arbeigobetalingsserivce.mobilePayActivity">


    <Button
        style="@style/ButtonStyle"
        android:id="@+id/payButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:background="@color/lightGreen"
        android:text="Betal for opgave"
        android:onClick="onClickBetal"
        />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/payButton"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:id="@+id/toggleButton"
        android:text="ToggleButton"
        android:textOn="BLUE ON"
        android:textOff="BLUE OFF"
        android:checked="false"/>

</RelativeLayout>
